import time
import random
from PIL import Image

def nerve_of_steel_game():
    print("Players stand")
    
    # Ask user to set a random timer between 10-25 seconds
    set_time = int(input("Please set your timer in seconds (between 10 and 25 recommended): "))
    print(f"Sleeping for {sleep_time} seconds. Players can sit down...")
    
    # Create an empty list to track seated players
    seated_players = []
    
    # Start a timer
    start_time = time.time()
    
    # While the time is still running, allow players to enter their names
    while (time.time() - start_time) < set_time:
        player_name = input("Enter name of player who sat down (or 'done' to finish): ")
        
        if player_name.lower() == 'done':
            break
        else:
            seated_players.append(player_name)
            print(f"{player_name} has sat down.")
   
# Time is up
    print("Time's Up.")
    
    # Determine the winner
    if seated_players:
        winner = seated_players[-1]  # Last person to sit down wins
        print(f"The winner is: {winner}")
    else:
        print("No one sat down. No winner.")

# Run the game
    nerve_of_steel_game() 
